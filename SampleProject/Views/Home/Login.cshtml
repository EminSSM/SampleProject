@using Entities
@model Register
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-form-title" style="background-image: url(images/bg-01.jpg);">
                <span class="login100-form-title-1">
                    Giriş Ekranı
                </span>
            </div>

            <form class="login100-form validate-form" asp-controller="Home" asp-action="Login" method="post">
                <div class="wrap-input100 validate-input m-b-26" data-validate="Email Bilgisi Zorunlu">
                    <span class="label-input100">Email</span>
                    <input class="input100" type="text" name="email" placeholder="Email Giriniz">
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input m-b-18" data-validate="Şifre Bilgisi Zorunlu">
                    <span class="label-input100">Şifre</span>
                    <input class="input100" type="password" name="pass" placeholder="Şifre Giriniz">
                    <span class="focus-input100"></span>
                </div>

                <div class="flex-sb-m w-full p-b-30">
                    <div class="contact100-form-checkbox">
                        
                    </div>
                    <div>
                        <a href="/home/register" class="txt1">
                            Kayıt olmak için tıklayın
                        </a>
                    </div>
                </div>

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        Giriş Yap
                    </button>
                </div>
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.Error
                    </div>
                }
            </form>
        </div>
    </div>
</div>

<script src="vendor/jquery/jquery-3.2.1.min.js"></script>
<script src="vendor/animsition/js/animsition.min.js"></script>
<script src="vendor/bootstrap/js/popper.js"></script>
<script src="vendor/bootstrap/js/bootstrap.min.js"></script>
<script src="vendor/select2/select2.min.js"></script>
<script src="vendor/daterangepicker/moment.min.js"></script>
<script src="vendor/daterangepicker/daterangepicker.js"></script>
<script src="vendor/countdowntime/countdowntime.js"></script>
<script src="js/main.js"></script>
